<!-- Modal -->
<div class="modal fade" id="newCocktail" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content" style="opacity: 0.9">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Create a cocktail</h4>
      </div>
      <div class="modal-body">
        <div style="display: flex">
          <div style="flex: 1 1 auto; padding: 20px">
            <div style="margin: 40px auto;">
            <h1>Let's create a new cocktail</h1>

              <%= simple_form_for(@new_cocktail) do |f| %>
                <%= f.error_notification %>
                <%= f.input :name %>
                <%= f.input :description %>
                <%= f.input :photo, as: :attachinary %>
                <%= f.button :submit %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
