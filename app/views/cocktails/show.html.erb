<h3> <%= link_to "Back home", cocktails_path%></h3>

<h1><%= @cocktail.name%> </h1>
<%= link_to "Add a new dose of ingredient", new_cocktail_dose_path(@cocktail) %>

<h2>The ingredients</h2>

<ul>
<% @cocktail.doses.each do |dose| %>
  <li><%= dose.description %> of <%= dose.ingredient.name %> <%= link_to "Delete", cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "Are you sure?" } %></li>
<% end %>
</ul>

