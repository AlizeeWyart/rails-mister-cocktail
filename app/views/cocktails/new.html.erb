
<div style="display: flex">
  <div style="flex: 1 1 auto; padding: 20px">
    <div style="margin: 40px auto;">
    <h1>Let's create a new cocktail</h1>

      <%= simple_form_for(@cocktail) do |f| %>
        <%= f.error_notification %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :photo, as: :attachinary %>
        <%= f.button :submit %>
      <% end %>
    </div>

    </div>
  </div>
</div>
